generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id                String       @id @default(auto()) @map("_id") @db.ObjectId
  name              String?
  email             String       @unique
  password          String
  createdAt         DateTime     @default(now())
  updatedAt         DateTime     @updatedAt
  createdQuizzes    Quiz[]       @relation("QuizCreator")
  tests             Test[]
  accessibleQuizzes QuizAccess[]
}

model Quiz {
  id         String       @id @default(auto()) @map("_id") @db.ObjectId
  name       String
  questions  Question[]
  timeLimit  Int          @map("time_limit")
  creatorId  String       @map("creator_id") @db.ObjectId
  creator    User         @relation("QuizCreator", fields: [creatorId], references: [id])
  sharedWith QuizAccess[]
  createdAt  DateTime     @default(now()) @map("created_at")
  updatedAt  DateTime     @updatedAt @map("updated_at")
  Test       Test[]
}

model QuizAccess {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  quizId    String   @map("quiz_id") @db.ObjectId
  quiz      Quiz     @relation(fields: [quizId], references: [id])
  userId    String   @map("user_id") @db.ObjectId
  user      User     @relation(fields: [userId], references: [id])
  sharedAt  DateTime @default(now())
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@unique([quizId, userId])
}

model Test {
  id        String     @id @default(auto()) @map("_id") @db.ObjectId
  quiz      Quiz       @relation(fields: [quizId], references: [id])
  User      User?      @relation(fields: [userId], references: [id])
  quizId    String     @map("quiz_id") @db.ObjectId
  userId    String     @map("user_id") @db.ObjectId
  questions Question[]
  timeLimit Int        @map("time_limit")
  createdAt DateTime   @default(now()) @map("created_at")
  updatedAt DateTime   @updatedAt @map("updated_at")
}

type Question {
  id          String   @default(cuid()) @map("_id")
  question    String
  options     Option[]
  explanation String?
  skip        Boolean?
}

type Option {
  id           String  @default(cuid()) @map("_id")
  option       String
  correct      Boolean
  userSelected Boolean?
}

type UserAnswer {
  questionId       String
  selectedOptionId String
}

enum TestStatus {
  IN_PROGRESS
  COMPLETED
}
