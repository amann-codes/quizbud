generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id                String       @id @default(auto()) @map("_id") @db.ObjectId
  name              String?
  email             String       @unique
  password          String?
  emailVerified     DateTime?
  image             String?
  createdAt         DateTime     @default(now())
  updatedAt         DateTime     @updatedAt
  createdQuizzes    Quiz[]       @relation("QuizCreator")
  tests             Test[]
  accessibleQuizzes QuizAccess[]
  userStats         userStat[]
  accounts          Account[]
}

model Account {
  id                String  @id @default(auto()) @map("_id") @db.ObjectId
  userId            String  @db.ObjectId
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.String
  access_token      String? @db.String
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.String
  session_state     String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Quiz {
  id         String       @id @default(auto()) @map("_id") @db.ObjectId
  name       String
  questions  Question[]
  expect     String?
  timeLimit  Int          @map("time_limit")
  creatorId  String       @map("creator_id") @db.ObjectId
  creator    User         @relation("QuizCreator", fields: [creatorId], references: [id])
  sharedWith QuizAccess[]
  createdAt  DateTime     @default(now()) @map("created_at")
  updatedAt  DateTime     @updatedAt @map("updated_at")
  Test       Test[]
}

model QuizAccess {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  quizId    String   @map("quiz_id") @db.ObjectId
  quiz      Quiz     @relation(fields: [quizId], references: [id])
  userId    String   @map("user_id") @db.ObjectId
  user      User     @relation(fields: [userId], references: [id])
  sharedAt  DateTime @default(now())
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@unique([quizId, userId])
}

model Test {
  id           String     @id @default(auto()) @map("_id") @db.ObjectId
  quiz         Quiz       @relation(fields: [quizId], references: [id])
  User         User?      @relation(fields: [userId], references: [id])
  quizId       String     @map("quiz_id") @db.ObjectId
  userId       String     @map("user_id") @db.ObjectId
  questions    Question[]
  currentIndex Int        @default(0) @map("current_index")
  testStatus   TestStatus @default(IN_PROGRESS) @map("test_status")
  evaluated    Boolean?   @default(false)
  endedAt      DateTime?  @map("ended_at")
  startedAt    DateTime   @default(now()) @map("started_at")
  createdAt    DateTime   @default(now()) @map("created_at")
  updatedAt    DateTime   @updatedAt @map("updated_at")
}

model TestEvent {
  id              String    @id @default(auto()) @map("_id") @db.ObjectId
  testId          String    @map("test_id") @db.ObjectId
  eventType       EventType @map("event_type")
  payload         Json
  clientTimeStamp DateTime  @map("client_timestamp")
  serverTimeStamp DateTime  @map("server_timestamp")
  idempotencyKey  String    @unique @map("idempotency_key")
  createdAt       DateTime  @default(now())
  processed       Boolean   @default(false)
}

model userStat {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  userId      String   @unique @map("user_id") @db.ObjectId
  correct     Int      @default(0)
  incorrect   Int      @default(0)
  skipped     Int      @default(0)
  score       Int?     @default(0)
  currentRank Int?     @map("current_rank")
  prevRank    Int?     @map("prev_rank")
  User        User?    @relation(fields: [userId], references: [id])
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")
}

type Question {
  id          String   @default(uuid())
  question    String
  options     Option[]
  explanation String?
  skip        Boolean  @default(false)
}

type Option {
  id           String   @default(uuid())
  option       String
  correct      Boolean
  userSelected Boolean?
}

enum TestStatus {
  IN_PROGRESS
  COMPLETED
}

enum EventType {
  SELECT
  SKIP
  SUBMIT
  NAVIGATE
  TIMEOUT
  HARDRESET
  RESET
}
